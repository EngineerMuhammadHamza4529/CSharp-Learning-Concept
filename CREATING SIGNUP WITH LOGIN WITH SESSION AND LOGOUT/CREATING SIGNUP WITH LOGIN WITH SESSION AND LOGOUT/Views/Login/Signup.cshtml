@model CREATING_SIGNUP_WITH_LOGIN_WITH_SESSION_AND_LOGOUT.Models.User

@{
    ViewBag.Title = "Signup";
}

<h2>Signup</h2>
@Html.Raw(ViewBag.InsertMessage)


