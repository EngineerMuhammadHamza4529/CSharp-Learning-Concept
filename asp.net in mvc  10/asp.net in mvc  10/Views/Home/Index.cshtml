{"Circket" , "Football" , "Hockey" , "Baseball"}))
<br />
<br />
@Html.Label("Comment") &nbsp; @Html.TextArea("CommentArea")
<br />
<br />
@Html.CheckBox("AcceptTerms") &nbsp; @Html.Label("I accept the Terms : ")
<br />
<br />
<input type="Submit" , value="Submit" />


@{
    Html.EndForm();
}



